{
  "compilerOptions": {
    "target": "es2022", // Atualizado para uma versão mais moderna do EcmaScript
    "module": "NodeNext", // <-- MUDANÇA PRINCIPAL
    "moduleResolution": "NodeNext", // <-- MUDANÇA PRINCIPAL
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "knexfile.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}